<?xml version="1.0" encoding="utf-8" ?>
<ConfigModel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <ServiceNounPrefix>RGT</ServiceNounPrefix>
  <ServiceName>AWS Resource Groups Tagging API</ServiceName>
  <ServiceClientInterface>IAmazonResourceGroupsTaggingAPI</ServiceClientInterface>
  <ServiceClient>AmazonResourceGroupsTaggingAPIClient</ServiceClient>
  <ServiceNamespace>Amazon.ResourceGroupsTaggingAPI</ServiceNamespace>

  <AutoIterate Start="PaginationToken" Next="PaginationToken" />

  <PipelineByValueProperties>
    <Property>ResourceARN</Property>
    <Property>Key</Property>
  </PipelineByValueProperties>

  <ServiceOperations>
    <ServiceOperation MethodName="GetResources" Noun="Resource" PipelineParameter="ResourceTypeFilters">
      <AutoIterate Start="PaginationToken" Next="PaginationToken" EmitLimit="TagsPerPage" ServicePageSize="100" />
    </ServiceOperation>
    <ServiceOperation MethodName="GetTagKeys" Noun="TagKey" />
    <ServiceOperation MethodName="GetTagValues" Noun="TagValue" />
    <ServiceOperation MethodName="TagResources" Verb="Add" Noun="ResourceTag" PipelineParameter="ResourceARNList" />
    <ServiceOperation MethodName="UntagResources" Verb="Remove" Noun="ResourceTag" PipelineParameter="ResourceARNList" />
  </ServiceOperations>

</ConfigModel>
