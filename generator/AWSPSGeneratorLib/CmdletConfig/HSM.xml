<?xml version="1.0" encoding="utf-8" ?>
<ConfigModel xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <ServiceNounPrefix>HSM</ServiceNounPrefix>
  <ServiceName>AWS Cloud HSM</ServiceName>
  <ServiceNamespace>Amazon.CloudHSM</ServiceNamespace>
  <ServiceClientInterface>IAmazonCloudHSM</ServiceClientInterface>
  <ServiceClient>AmazonCloudHSMClient</ServiceClient>
  
  <AutoIterate Start="NextToken" Next="NextToken" />

  <NounMappings>
    <Map From="Hsm"  To="Item"/>
    <Map From="Hapg" To="PartitionGroup"/>
  </NounMappings>
  
  <VerbMappings>
    <Map From="Delete"   To="Remove"/>
    <Map From="Describe" To="Get" />
    <Map From="List"     To="Get" />
    <Map From="Modify"   To="Update" />
  </VerbMappings>
  
  <ServiceOperations>
    
    <!-- Create Cmdlets -->
    
    <ServiceOperation MethodName="CreateHapg"/>
    <ServiceOperation MethodName="CreateHsm" PipelineParameter="IamRoleArn" AnonymousShouldProcessTarget="true" />
    <ServiceOperation MethodName="CreateLunaClient" PipelineParameter="Certificate"/>

    <!-- Remove Cmdlets -->
    
    <ServiceOperation MethodName="DeleteHapg" ShouldProcessTarget="HapgArn">
      <ParameterRenames>
        <Map From="HapgArn" To="Arn"/>
      </ParameterRenames>
    </ServiceOperation>

    <ServiceOperation MethodName="DeleteHsm" ShouldProcessTarget="HsmArn">
      <ParameterRenames>
        <Map From="HsmArn" To="Arn"/>
      </ParameterRenames>
    </ServiceOperation>

    <ServiceOperation MethodName="DeleteLunaClient" ShouldProcessTarget="ClientArn">
      <ParameterRenames>
        <Map From="ClientArn" To="Arn"/>
      </ParameterRenames>
    </ServiceOperation>
    
    <!-- Get Cmdlets -->
    
    <ServiceOperation MethodName="DescribeHapg" Output="Response"/>
    <ServiceOperation MethodName="DescribeHsm" Output="Response" PipelineParameter="HsmArn"/>
    <ServiceOperation MethodName="DescribeLunaClient" Output="Response" PipelineParameter="ClientArn"/>
    
    <ServiceOperation MethodName="GetConfig" Output="Response" PipelineParameter="ClientArn"/>
    
    <!-- List Cmdlets -->
    
    <ServiceOperation 
      MethodName="ListAvailableZones" 
    />
    
    <ServiceOperation 
      MethodName="ListHapgs" 
      Noun="PartitionGroupList" 
    />
    
    <ServiceOperation 
      MethodName="ListHsms"  
      Noun="ItemList" 
    />
    
    <ServiceOperation 
      MethodName="ListLunaClients" 
      Noun="LunaClientList" 
    />

    <!-- Update Cmdlets -->
    
    <ServiceOperation MethodName="ModifyHapg" PipelineParameter="HapgArn">
      <ParameterRenames>
        <Map From="HapgArn" To="Arn"/>
      </ParameterRenames>
    </ServiceOperation>
    
    <ServiceOperation MethodName="ModifyHsm" PipelineParameter="HsmArn">
      <ParameterRenames>
        <Map From="HsmArn" To="Arn"/>
      </ParameterRenames>
    </ServiceOperation>
    
    <ServiceOperation MethodName="ModifyLunaClient" PipelineParameter="ClientArn">
      <ParameterRenames>
        <Map From="ClientArn" To="Arn"/>
      </ParameterRenames>
    </ServiceOperation>
	
	<ServiceOperation MethodName="AddTagsToResource" Verb="Set" Noun="ResourceTag" PipelineParameter="ResourceArn" />
	<ServiceOperation MethodName="ListTagsForResource" Noun="ResourceTag" />
	<ServiceOperation MethodName="RemoveTagsFromResource" Noun="ResourceTag" PipelineParameter="ResourceArn" />
	
  </ServiceOperations>
  
</ConfigModel>